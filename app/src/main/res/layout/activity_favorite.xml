<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:padding="10sp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="7sp"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/menubtn"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:layout_marginStart="70sp"
            android:text="즐겨찾기"
            android:textSize="45sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/textline"
                android:textStyle="bold">
                <TextView
                    android:id="@+id/favorite_list_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:text="국가장학금"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/favorite_alarm_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="55sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/btn_round"
                    android:text="알림추가"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/favorite_btn_1"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5sp"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/like" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/textline"
                android:textStyle="bold">
                <TextView
                    android:id="@+id/favorite_list_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:text="국가장학금"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/favorite_alarm_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="55sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/btn_round"
                    android:text="알림추가"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/favorite_btn_2"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like"
                    tools:ignore="SpeakableTextPresentCheck" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/textline"
                android:textStyle="bold">
                <TextView
                    android:id="@+id/favorite_list_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:text="국가장학금"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/favorite_alarm_3"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="55sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/btn_round"
                    android:text="알림추가"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/favorite_btn_3"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5sp"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/like" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/textline"
                android:textStyle="bold">
                <TextView
                    android:id="@+id/search_list_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:text="국가장학금"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/favorite_alarm_4"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="55sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/btn_round"
                    android:text="알림추가"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/favorite_btn_4"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5sp"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/like" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>